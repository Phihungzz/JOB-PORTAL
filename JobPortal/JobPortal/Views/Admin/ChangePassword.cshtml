
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="d-flex justify-content-center mt-4">
    <div class="col-md-6 ">
        <h2>Thay đổi mật khẩu</h2>
        <form action="@Url.Action("ChangePassword","Admin")" id="fr" method="post" onsubmit="return validateChangePassword()">
            <div class="form-group mt-2">
                <label for="Password">Mật khẩu hiện tại</label>
                <input type="password" name="oldPassword" id="oldPassword" onblur="validateOldPass(this)" class="form-control" placeholder="Nhập mật khẩu hiện tại">
                <span id="error-oldpassword" class="error-msg"></span>
            </div>
            <div class="form-group mt-2">
                <label for="Password">Mật khẩu mới</label>
                <input type="password" name="newPassword" id="Password" class="form-control" placeholder="Nhập mật khẩu mới" onkeyup="validateCpass(this)" onfocusout="validatePass(this)">
                <span id="error-password" class="error-msg"></span>
            </div>
            <div class="form-group mt-2">
                <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                <input type="password" name="cpassword" id="ConfirmPassword" placeholder="Nhập lại mật khẩu" class="form-control" onfocusout="validateCpass(this)">
                <span id="error-cpassword" class="error-msg"></span>
            </div>
            <div class="form-group">
                <div class="mt-3">
                    <center><input type="submit" value="Xác nhận" class="btn-reg " /></center>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/MyScripts/main.js"></script>
