@model JobPortal.Models.EmployerModel

@{
    ViewBag.Title = "EmployerRegsiter";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid mt-5">
    <div class="row ">
        <div class="col-md-4 mt-5">
            <div class="cus-box-reg">
                <center> <img src="~/Content/Static/Giám đốc tài chính.jpg" /></center>
                <ul class="mt-1">
                    <li>
                        Đăng ký và xây dựng hồ sơ
                    </li>
                    <li> Nhận thông tin được gửi thẳng tới email</li>

                </ul>
                <hr />
                <center><a href="@Url.Action("JobSeekerRegister","Home")">Đăng ký với tư cách Ứng viên</a></center>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card p-4" style="border: none;transform: translateY(0);">
                <h3>Đăng ký của Nhà tuyển dụng </h3>

                <form action="@Url.Action("EmployerRegister","Home")" method="post" enctype="multipart/form-data" onsubmit="return validateEmployerRegisterForm()">
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="CompanyName">Tên công ty</label>
                            <div>
                                <input type="text" name="CompanyName" id="companyname" class="form-control" onblur="validateCompanyName(this)" placeholder="Nhập tên công ty" />
                                <span id="error-companyname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="OfficialEmail">Email của trụ sở</label>
                            <div>
                                <input type="text" name="OfficialEmail" id="officialemail" class="form-control" placeholder="Nhập email" onblur="validateOfficialEmail(this)" />
                                <span id="error-officialemail" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="Website" class="control-label">Website</label>
                            <input type="text" name="Website" id="Website" class="form-control" placeholder="Nhập website" onblur="validateWebsite(this)" />
                            <span id="error-Website" class="text-danger"></span>
                        </div>
                        <hr />
                        <h5>Giới thiệu về Nhà tuyển dụng</h5>
                        <div class="form-group">
                            <label for="Name" class="control-label">Tên đầy đủ</label>
                            <input type="text" name="Name" id="Name" class="form-control" placeholder="Nhập tên đầy đủ" onblur="validateName(this)" />
                            <span id="error-Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Designation" class="control-label">Chức danh</label>
                            <input type="text" name="Designation" id="Designation" class="form-control" placeholder="Nhập chức danh" onblur="validateDesignation(this)" />
                            <span id="error-Designation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Email" class="control-label">Email</label>
                            <input type="email" name="Email" id="Email" class="form-control" placeholder="Nhập email" onblur="validateEmail(this)" />
                            <span id="error-email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="ContactPhone" class="control-label">Số điện thoại</label>
                            <input type="text" name="ContactPhone" id="ContactPhone" class="form-control" placeholder="Nhập số điện thoại" onblur="validatePhone(this)" />
                            <span id="error-phone" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label for="username">Tên đăng nhập</label>
                            <input type="text" name="Username" id="username" placeholder="Nhập tên đăng nhập" class="form-control" oninput="validateUsername(this.value)">
                            <span id="error-username" class="error-msg"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label for="Password">Mật khẩu</label>
                            <input type="password" name="Password" id="Password" class="form-control" placeholder="Nhập mật khẩu" onkeyup="validateCpass(this)" onfocusout="validatePass(this)">
                            <span id="error-password" class="error-msg"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                            <input type="password" name="cpassword" id="ConfirmPassword" placeholder="Xác nhận mật khẩu" class="form-control" onfocusout="validateCpass(this)">
                            <span id="error-cpassword" class="error-msg"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label for="logoUpload">Logo công ty</label>
                            <input type="file" name="logoUpload" id="logoUpload" class="form-control" accept=".png, .jpg" onchange="validateLogoUpload(this)" />
                            <span id="error-logoUpload" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="mt-3">
                                <input type="submit" value="Đăng ký" class="btn-reg" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/MyScripts/main.js"></script>
