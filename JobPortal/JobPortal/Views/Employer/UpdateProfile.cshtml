@model JobPortal.Models.EmployerModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/EmployerLayout.cshtml";
}
<div class="d-flex justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card p-3" style="transform:translateY(0);">
            <h3>Cập nhật hồ sơ</h3>
            <form action="@Url.Action("UpdateProfile","Employer")" method="post" enctype="multipart/form-data" onsubmit="return validateEmployerUpdateForm();">
                <div class="form-group">
                    <label for="CompanyName">Tên công ty</label>
                    <input type="text" name="CompanyName" id="companyname" class="form-control" onblur="validateCompanyName(this)" placeholder="Nhập tên công ty" value="@Model.CompanyName" />
                    <span id="error-companyname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="OfficialEmail">Địa chỉ email công ty</label>
                    <input type="text" name="OfficialEmail" id="officialemail" class="form-control" placeholder="Nhập email" onblur="validateOfficialEmail(this)" value="@Model.OfficialEmail" />
                    <span id="error-officialemail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Website" class="control-label">Website</label>
                    <input type="text" name="Website" id="Website" class="form-control" placeholder="Nhập website" onblur="validateWebsite(this)" value="@Model.Website" />
                    <span id="error-Website" class="text-danger"></span>
                </div>

                <hr />
                <h5>Thông tin chi tiết của nhà tuyển dụng</h5>

                <div class="form-group">
                    <label for="Name" class="control-label">Tên đầy đủ</label>
                    <input type="text" name="Name" id="Name" class="form-control" placeholder="Nhập tên đầy đủ" onblur="validateName(this)" value="@Model.Name" />
                    <span id="error-Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Designation" class="control-label">Chức vụ</label>
                    <input type="text" name="Designation" id="Designation" class="form-control" placeholder="Nhập chức vụ" onblur="validateDesignation(this)" value="@Model.Designation" />
                    <span id="error-Designation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email" class="control-label">Email</label>
                    <input type="email" name="Email" id="Email" class="form-control" placeholder="Nhập email" onblur="validateEmail(this)" value="@Model.Email" />
                    <span id="error-email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ContactPhone" class="control-label">Số điện thoại</label>
                    <input type="text" name="ContactPhone" id="ContactPhone" class="form-control" placeholder="Nhập số điện thoại" onblur="validatePhone(this)" value="@Model.ContactPhone" />
                    <span id="error-phone" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label for="logoUpload">Logo Công ty</label>
                    <input type="file" name="uploadedLogo" id="logoUpload" class="form-control" accept=".png, .jpg" onchange="validateLogoUpload(this)" />
                    <span id="error-logoUpload" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Cập nhật" class="btn-reg mt-3" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/MyScripts/main.js"></script>
