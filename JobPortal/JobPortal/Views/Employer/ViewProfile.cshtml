@model JobPortal.Models.EmployerModel

@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/EmployerLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<div class="container mt-2">
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="data:jpg/image;base64,@Convert.ToBase64String(Model.CompanyLogo)" alt="Company Logo" class="img-fluid rounded-circle" width="200" height="200" />
            <h4>@(Model.CompanyName ?? "Tên công ty không có")</h4>
            <h6>@(Model.Username ?? "Tên người dùng không có")</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card p-2">
                <h4>Thông tin công ty</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt><i class="fas fa-building"></i> Tên công ty</dt>
                    <dd>@(Model.CompanyName ?? "Chưa có tên công ty")</dd>

                    <dt><i class="fas fa-envelope"></i> Địa chỉ email công ty</dt>
                    <dd>@(Model.OfficialEmail ?? "Chưa có email")</dd>

                    <dt><i class="fas fa-globe"></i> Website</dt>
                    <dd>@(Model.Website ?? "Chưa có website")</dd>
                </dl>
            </div>
            <div class="card mt-2 p-2">
                <p>
                    <a href="@Url.Action("UpdateProfile", "Employer", new { id = @Model.EmployerID })" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a href="@Url.Action("ChangePassword", "Employer")" class="btn btn-secondary ml-2">
                        <i class="fas fa-key"></i> Thay đổi mật khẩu
                    </a> <!-- Đã thêm thẻ đóng cho <a> -->
                </p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-2">
                <h4>Thông tin nhà tuyển dụng</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt><i class="fas fa-user"></i> Tên</dt>
                    <dd>@(Model.Name ?? "Chưa có tên")</dd>

                    <dt><i class="fas fa-user-tie"></i> Chức vụ</dt>
                    <dd>@(Model.Designation ?? "Chưa có chức vụ")</dd>

                    <dt><i class="fas fa-envelope"></i> Email</dt>
                    <dd>@(Model.Email ?? "Chưa có email")</dd>

                    <dt><i class="fas fa-phone"></i> Số điện thoại</dt>
                    <dd>@(Model.ContactPhone ?? "Chưa có số điện thoại")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<script>
    function preventBack() {
        window.history.forward();
    }
    setTimeout("preventBack()", 0);
    window.onunload = function () {
        null;
    }
</script>
