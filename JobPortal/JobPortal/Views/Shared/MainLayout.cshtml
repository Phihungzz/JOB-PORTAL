<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/icon.png" type="image/x-icon">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/MyCss/site.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <navbar>
        <div class="cus-navbar-logo">
            <a href="/"><img src="~/Content/Static/logo1.png"></a>
        </div>
        <div class="cus-navbar">

            <a href="@Url.Action("Jobs","Home")">Công việc</a>
            <a href="@Url.Action("Login","Home")" class="btn-login">Đăng nhập</a>

            <a href="@Url.Action("JobSeekerRegister", "Home")" class="btn-register">Đăng ký</a>
            <div class="cus-dropdown "><p href="#" style="margin-top:30px">|</p></div>
            <a href="@Url.Action("About","Home")">Về chúng tôi</a>
            <a href="@Url.Action("ContactUs","Home")">Liên hệ</a>
        </div>

    </navbar>

    @{
        string message = TempData["Message"] as string;
        if (!String.IsNullOrEmpty(message))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong> @message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <script>
                function preventBack() {
                    window.history.forward();
                }

                setTimeout(preventBack, 0);

                window.onunload = function () {
                    null;
                };
            </script>
        }
    }

    <div class="container body-content">
        @RenderBody()
    </div>


    <footer class="row row-cols-5 py-5 my-5 border-top">
        <div class="col">
            <a href="/" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><img src="~/Content/Static/logo1.png"></svg>

            </a>
        </div>
        <div class="col">

        </div>
        <div class="col">
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="@Url.Action("About","Home")" class="nav-link p-0 text-muted">Về chúng tôi</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Sự nghiệp</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Địa điểm</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">FAQs</a></li>
            </ul>
        </div>
        <div class="col">
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Trung tâm hỗ trợ</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Báo cáo vấn đề</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Chính sách và Bảo mật</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Cảnh báo</a></li>
            </ul>
        </div>
    </footer>
    <div class="copy-right" align="center">
        &copy; @DateTime.Now.Year Nguyễn Lê Phi Hùng
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>